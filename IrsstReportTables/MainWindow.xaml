        <DataGrid Name="Table4" Height="200" Width="1010" HorizontalAlignment="Left" Margin="46,374,0,0" VerticalAlignment="Top" RowHeight="20" ColumnWidth="200" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header = "Parameter" Binding = "{Binding Title}" />
                <DataGridTextColumn Header = "Informedvar" Binding = "{Binding Datum}" />
                <DataGridTextColumn Header = "Uninformative" Binding = "{Binding Datum2}" />
                <DataGridTextColumn Header = "Past.data" Binding = "{Binding Datum3}" />
                <DataGridTextColumn Header = "Riskband" Binding = "{Binding Datum4}" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock FontSize="22" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Left" Margin="46,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="70" Width="1010"><Span><Run Text="Table "/></Span><Span><Run Text="4"/></Span><Span><Run Text=" - Exposure metrics point estimates and credible intervals for 4 choices of prior distribution"/></Span></TextBlock>
    </Grid>
</Window>
