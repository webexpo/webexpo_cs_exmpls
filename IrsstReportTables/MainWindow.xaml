<Window x:Class="IrsstReportTables.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IrsstReportTables"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="WebExpo C# Examples - IRSST Report" Height="660" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="347*"/>
            <RowDefinition Height="285*"/>
        </Grid.RowDefinitions>
        <Label Content="Select your table:" HorizontalAlignment="Left" Height="33" Margin="10,30,0,0" VerticalAlignment="Top" Width="106"/>
        <ComboBox Name="Tables4Display" HorizontalAlignment="Left" Height="33" Margin="121,30,0,0" VerticalAlignment="Top" Width="148" SelectionChanged="Tables4Display_SelectionChanged"/>
        <Button Content="Display table" HorizontalAlignment="Left" Margin="377,165,0,0" VerticalAlignment="Top" Width="119" Click="Button_Click"/>
        <Label Name="TableDesc" Content="Table title:" HorizontalAlignment="Left" Height="33" Margin="274,30,0,0" VerticalAlignment="Top" Width="199" FontWeight="Bold"/>
        <TextBlock Name="TableTitle" HorizontalAlignment="Left" Height="32" Margin="274,63,0,0" VerticalAlignment="Top" Width="710">
            <Run></Run>
        </TextBlock>
        <Grid Name="TablePlaceholder" HorizontalAlignment="Left" Height="357" Margin="42,233,0,0" VerticalAlignment="Top" Width="836" Grid.RowSpan="2"/>
        <Grid Name="Spinner" Margin="20" Visibility="Hidden">
            <fa:ImageAwesome Icon="Spinner" Spin="True" Height="48" Width="48" />
        </Grid>
        <TextBlock Name="SlowLoadWarning" HorizontalAlignment="Left" Height="42" Margin="274,100,0,0" TextWrapping="Wrap" Text="Warning! This table will take a while to load (~10 min)" VerticalAlignment="Top" Width="700" Visibility="Hidden" FontWeight="Bold" FontSize="18"/>
    </Grid>
</Window>
