<Window x:Class="IrsstReportTables.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IrsstReportTables"
        mc:Ignorable="d"
        Title="WebExpo C# Examples - IRSST Report" Height="850" Width="1200">
    <Grid>
        <DataGrid Name="Table3" Height="200" Width="1010" HorizontalAlignment="Left" Margin="46,78,0,0" VerticalAlignment="Top" RowHeight="20" ColumnWidth="500" AutoGenerateColumns="False">
